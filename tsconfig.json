{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "declarations.d.ts", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
